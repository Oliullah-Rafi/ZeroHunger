                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div>
                    <input type="submit" class=" btn btn-success" value="Login" />
                </div>

                <div>
                    <br />
                    @Html.ActionLink("Sign Up", "SignUp", null, new { @class = "btn btn-success" })
                </div>
            </div>
